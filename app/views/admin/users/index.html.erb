 <%  provide(:title,"Users") %>

 <h1>List Users</h1>
 <div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Responsive Hover Table</h3>

        <div class="box-tools">
          <div class="input-group input-group-sm" style="width: 150px;">
            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

            <div class="input-group-btn">
              <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <tbody><tr>
            <th>Name</th>
            <th>Email</th>
            <th>Address</th>
            <th>Phone</th>
            <th>photo</th>
          </tr>
          <% @admin_users.each do |admin_user| %>

          <tr>
            <td><%= admin_user.name %></td>
            <td><%= admin_user.email %></td>
            <td><%= admin_user.address %></td>
            <td><%= admin_user.phone %></td>
            <td><%= image_tag admin_user.photo ,size: "40x40", alt: "Edit Entry"%></td>
            <td><%= link_to 'Chat', admin_user_url(admin_user.id) %></td>
            <td><%= link_to 'Edit', edit_admin_user_path(admin_user) %></td>
            <td><%= link_to 'Destroy', admin_user_url(admin_user.id), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>

        </tbody></table>
      </div>
      <!-- /.box-body -->
    </div>
    <!-- /.box -->
  </div>
</div>

<div class="row">
  <div class="col-md-3">
    <!-- USERS LIST -->
    <div class="box box-danger">
      <div class="box-header with-border">
        <h3 class="box-title">Mem On Week</h3>

        <div class="box-tools pull-right">
          <span class="label label-danger"><%= @number_user_on_week %> New Members</span>
          <button type="button" class="btn btn-box-tool" data-widget="collapse"><i class="fa fa-minus"></i>
          </button>
          <button type="button" class="btn btn-box-tool" data-widget="remove"><i class="fa fa-times"></i>
          </button>
        </div>
      </div>
      <!-- /.box-header -->
      <div class="box-body no-padding">
        <ul class="users-list clearfix">

         <% @user.each do |user| %>

         <li>
           <% if user.photo? %>
           <%=link_to(image_tag user.photo, :class=>"work", :size => "128x128") %>
           <%=link_to(user.name, :class=>"users-list-name") %>
           <% else %>
           <%= image_tag("default.jpg",:size => "128x128") %>
           <%=link_to(user.name, :class=>"users-list-name") %>
           <% end %>
           <span class="users-list-date"><%= user.created_at.strftime("%Y-%m-%d") %></span>
         </li>
         <% end %>
         

       </ul>
       <!-- /.users-list -->
     </div>
     <!-- /.box-body -->
     <div class="box-footer text-center">
      <%= link_to('View All Users', admin_users_path,:class=>"uppercase" ) %>
    </div>
    <!-- /.box-footer -->
  </div>
  <!--/.box -->
</div>
<!-- /.col -->
</div>