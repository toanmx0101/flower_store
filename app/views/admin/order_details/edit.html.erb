<%  provide(:title,"Edit order_details") %>

<h1>Order confirmation</h1>
<section class="content">
	<div class="row">
		<div class="col-md-6">
			<div class="box box-primary">
				<div class="box-header with-border">
					
					<%= form_for [:admin, @admin_order_detail] do |f| %>
					<div class="form-group">
						<%= f.label :order_id , class: "form-control" %>
						<%= f.select :order_id, options_for_select(Order.all.map{|e| [e.user_id, e.id]}) %>
					</div>

					<div class="form-group">
						<%= f.label :product_detail_id , class: "form-control" %>
						<%= f.select :product_detail_id, options_for_select(ProductDetail.all.map{|e| [e.type_product, e.id]}) %>
					</div>

					<div class="form-group">
						<%= f.label :product_name %>
						<%= f.text_field :product_name, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :product_type %>
						<%= f.text_field :product_type, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :product_details_code %>
						<%= f.text_field :product_details_code, class: "form-control" %>
					</div>

					<div class="form-group">
						<%= f.label :quantity %>
						<%= f.number_field :quantity, class: "form-control" %>
					</div>


					<div class="field">
						<%= f.label :price %>
						<%= f.number_field :price %>
					</div>
					<br>
					<div class="form-group">
						<%= f.submit "Create", class: "btn btn-info" %>
					</div>              
					
					<% end %>
				</div>
			</div>
		</div>
	</div>
</section>