<%  provide(:title,"New Order") %>

<h1>New Admin Order</h1>
<section class="content">
	<div class="row">
		<div class="col-md-6">
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">Add Order</h3>
				</div>
				<%= form_for [:admin, Order.new] do |f| %>
				<div class="box-body">
					<div class="form-group">
						<%= f.label :user_id , class: "form-control" %>
						<%= f.select :user_id, options_for_select(User.all.map{|e| [e.name, e.id]}) %>
					</div>

					<div class="form-group">
						<%= f.label :address %>
						<%= f.text_field :address, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :requirement %>
						<%= f.text_field :requirement, class: "form-control" %>
					</div>

					<div class="form-group">
						<%= f.label :phonenumber %>
						<%= f.number_field :phonenumber, class: "form-control" %>
					</div>


					<div class="field">
						<%= f.label :status %>
						<%= f.check_box :status %>

					</div>
					<br>
					<div class="form-group">
						<%= f.submit "Create", class: "btn btn-info" %>
					</div>            
				</div>
				<% end %>
			</div>

		</div>
	</section>
	<%= link_to 'Back', admin_orders_path %>