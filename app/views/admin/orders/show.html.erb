<h1></h1>
<div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Responsive Hover Table</h3>

        <div class="box-tools">
          <div class="input-group input-group-sm" style="width: 150px;">
            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

            <div class="input-group-btn">
              <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div>
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
         <thead>
          <tr>
            <th>Order</th>
            <th>Product details</th>
            <th>Quantity</th>
            <th>Price</th>
            <th colspan="3"></th>
          </tr>
        </thead>

        <tbody>
          <% @admin_order_details.each do |admin_order_detail| %>
          <tr>
            <td><%= admin_order_detail.order_id %></td>
            <td><%= admin_order_detail.product_detail_id %></td>
            <td><%= admin_order_detail.quantity %></td>
            <td><%= admin_order_detail.price %></td>
            <td><%= link_to 'Show', admin_order_detail_path(admin_order_detail) %></td>
            <td><%= link_to 'Edit', edit_admin_order_detail_path(admin_order_detail) %></td>
            <td><%= link_to 'Destroy', admin_order_detail_path(admin_order_detail), method: :delete, data: { confirm: 'Are you sure?' } %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>
    <!-- /.box-body -->
  </div>
</div>
</div>
