<%  provide(:title,"Edit Order") %>

<h1>Order confirmation</h1>
<section class="content">
	<div class="row">
		<div class="col-md-6">
			<div class="box box-primary">
				<div class="box-header with-border">
				</div>
				<%= form_for [:admin, @admin_order] do |f| %>
			<% if @admin_order.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

					<ul>
						<% product.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
				<% end %>
				<div class="box-body">
					<div class="form-group">
						<%= f.label :user_id , class: "form-control" %>
						<%= f.select :user_id, options_for_select(User.all.map{|e| [e.name, e.id]}) %>
					</div>

					<div class="form-group">
						<%= f.label :address %>
						<%= f.text_field :address, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :requirement %>
						<%= f.text_field :requirement, class: "form-control" %>
					</div>

					<div class="form-group">
						<%= f.label :phonenumber %>
						<%= f.number_field :phonenumber, class: "form-control" %>
					</div>


					<div class="field">
						<%= f.label :Check %>
						<%= f.check_box :status %>
					</div>
					<br>
					<div class="form-group">
						<%= f.submit "Create", class: "btn btn-info" %>
					</div>              
				</div>
				<% end %>
			</div>
		</div>
	</section>