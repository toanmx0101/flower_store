 <%  provide(:title,"Orders") %>

 <h1>List Orders</h1>
 <div class="row">
  <div class="col-xs-12">
    <div class="box">
      <div class="box-header">
        <h3 class="box-title">Responsive Hover Table</h3>

        <div class="box-tools">
          <div class="input-group input-group-sm" style="width: 150px;">
            <input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

            <div class="input-group-btn">
              <button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
            </div>
          </div>
        </div>
      </div>
      <div class="box-body table-responsive no-padding">
        <table class="table table-hover">
          <thead>
            <tr>
              <th>User</th>
              <th>Address</th>
              <th>Requirement</th>
              <th>Phonenumber</th>
              <th>Status</th>
              <th colspan="3"></th>
            </tr>
          </thead>

          <tbody>
            <% @admin_orders.each do |admin_order| %>
            <tr>
              <td><%= admin_order.user_id %></td>
              <td><%= admin_order.address %></td>
              <td><%= admin_order.requirement %></td>
              <td><%= admin_order.phonenumber %></td>
              <td><%= admin_order.status %></td>
              <td><%= link_to 'Show', admin_order_path(admin_order) %></td>
              <td><%= link_to 'Edit', edit_admin_order_path(admin_order) %></td>
              <td><%= link_to 'Destroy', admin_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
            </tr>
            <% end %>
          </tbody>
        </table>
      </div>
      <!-- /.box-body -->
    </div>
  </div>
</div>
<br>

<%= link_to 'New Admin Order', new_admin_order_path %>
