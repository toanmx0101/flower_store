<p id="notice"><%= notice %></p>

<h1>Admin Orders</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Address</th>
      <th>Requirement</th>
      <th>Phonenumber</th>
      <th>Status</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_orders.each do |admin_order| %>
      <tr>
        <td><%= admin_order.user_id %></td>
        <td><%= admin_order.address %></td>
        <td><%= admin_order.requirement %></td>
        <td><%= admin_order.phonenumber %></td>
        <td><%= admin_order.status %></td>
        <td><%= link_to 'Show', admin_order %></td>
        <td><%= link_to 'Edit', edit_admin_order_path(admin_order) %></td>
        <td><%= link_to 'Destroy', admin_order, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

