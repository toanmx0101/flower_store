<%  provide(:title,"Edit Product") %>

<h1>Edit Products</h1>
<section class="content">
	<div class="row">
		<div class="col-md-10">
			<div class="box box-primary">
				<div class="box-header with-border">
				</div>
				<%= form_for(@admin_product) do |f| %>
				<% if @admin_product.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

					<ul>
						<% product.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
				<% end %>
				<div class="box-body">
					<div class="form-group">
						<%= f.label :name %>
						<%= f.text_field :name, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :category %>
						<%= f.select :category_id, options_for_select(Category.all.map{|e| [e.name, e.id]}) %>
					</div>
					<div class="form-group">
						<%= f.label :image %>
						<%= f.file_field :image %>
					</div>
					<div class="form-group">
						<%= f.label :price %>
						<%= f.text_field :price, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :description %>
						<%= f.text_area :description, class: "form-control", style: "max-width: 100%" %>
					</div>
					<div class="form-group">
						<%= f.submit "Update", class: "btn btn-danger" %>
					</div>            
				</div>
				<% end %>
			</div>
		</div>
	</section>