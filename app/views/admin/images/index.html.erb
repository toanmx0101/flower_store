<p id="notice"><%= notice %></p>

<h1>Admin Images</h1>

<table>
  <thead>
    <tr>
      <th>Link</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_images.each do |admin_image| %>
      <tr>
        <td><%= admin_image.link %></td>
        <td><%= admin_image.product_id %></td>
        <td><%= link_to 'Show', admin_image %></td>
        <td><%= link_to 'Edit', edit_admin_image_path(admin_image) %></td>
        <td><%= link_to 'Destroy', admin_image, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Image', new_admin_image_path %>
