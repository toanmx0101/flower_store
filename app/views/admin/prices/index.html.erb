<p id="notice"><%= notice %></p>

<h1>Admin Prices</h1>

<table>
  <thead>
    <tr>
      <th>Cost</th>
      <th>Discount</th>
      <th>New</th>
      <th>Product detail</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_prices.each do |admin_price| %>
      <tr>
        <td><%= admin_price.cost %></td>
        <td><%= admin_price.discount %></td>
        <td><%= admin_price.new %></td>
        <td><%= admin_price.product_detail_id %></td>
        <td><%= link_to 'Show', admin_price %></td>
        <td><%= link_to 'Edit', edit_admin_price_path(admin_price) %></td>
        <td><%= link_to 'Destroy', admin_price, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

