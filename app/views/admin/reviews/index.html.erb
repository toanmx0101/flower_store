<p id="notice"><%= notice %></p>

<h1>Admin Reviews</h1>

<table>
  <thead>
    <tr>
      <th>User</th>
      <th>Product</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @admin_reviews.each do |admin_review| %>
      <tr>
        <td><%= admin_review.user_id %></td>
        <td><%= admin_review.product_id %></td>
        <td><%= link_to 'Show', admin_review %></td>
        <td><%= link_to 'Edit', edit_admin_review_path(admin_review) %></td>
        <td><%= link_to 'Destroy', admin_review, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Admin Review', new_admin_review_path %>
