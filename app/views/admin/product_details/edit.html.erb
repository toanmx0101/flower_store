 <%  provide(:title,"Edit product details") %>


 <h1>Edit Products details</h1>
 <section class="content">
 	<div class="row">
 		<div class="col-md-10">
 			<div class="box box-primary">
 				<div class="box-header with-border">
 				</div>
 				<%= form_for [:admin, @admin_product_detail] do |f| %>
 				<% if @admin_product_detail.errors.any? %>
 				<div id="error_explanation">
 					<h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

 					<ul>
 						<% product.errors.full_messages.each do |message| %>
 						<li><%= message %></li>
 						<% end %>
 					</ul>
 				</div>
 				<% end %>
 				<div class="box-body">
 					<div class="form-group">
 						<%= f.label :type_product %>
 						<%= f.text_field :type_product , class: "form-control"%>
 					</div>
 					<div class="form-group">
 						<%= f.label :product_id %>
 						<%= f.select :product_id,options_for_select(Product.all.map{|e| [e.name, e.id]}) %>
 					</div>
 					<div class="form-group">
 						<%= f.label :code %>
 						<%= f.text_field :code , class: "form-control"%>
 					</div>
 					<div class="form-group">
 						<%= f.label :price %>
 						<%= f.text_field :price, class: "form-control" %>
 					</div>
 					<div class="form-group">
 						  <%= f.label :new %>
   					 <%= f.check_box :new %>
 					</div>
 					<div class="form-group">
 						  <%= f.label :discount %>
   					 <%= f.text_field :discount,class: "form-control"%>
 					</div>
 					<div class="form-group">
 						<%= f.submit "Update", class: "btn btn-danger" %>
 					</div>            
 				</div>
 				<% end %>
 			</div>
 		</div>
 	</section>