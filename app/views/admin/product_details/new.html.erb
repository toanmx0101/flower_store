 <%  provide(:title,"New Product Detail") %>

<h1>Add New Product details</h1>

<section class="content">
  <div class="row">
    <div class="col-md-6">
      <div class="box box-primary">
        <div class="box-header with-border">
          <h3 class="box-title">Add Products</h3>
        </div>

        <%= form_for [:admin, ProductDetail.new] do |f| %>
          <div class="box-body">
            <div class="form-group">
              <%= f.label :type_product %>
              <%= f.text_field :type_product, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :product %>
              <%= f.select :product_id, options_for_select(Product.all.map{|e| [e.name, e.id]}) %>
            </div>
            <div class="form-group">
              <%= f.label :price %>
              <%= f.number_field :price, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.label :new %>
              <%= f.check_box :new %>
            </div>
            <div class="form-group">
              <%= f.label :discount %>
              <%= f.number_field :discount, class: "form-control" %>
            </div>
            <div class="form-group">
              <%= f.submit "Create", class: "btn btn-info" %>
            </div>            
          </div>
        <% end %>
      </div>

    </div>
  </section>