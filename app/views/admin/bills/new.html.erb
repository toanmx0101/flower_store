
<%  provide(:title,"New Bill") %>
<h1>New Admin Bill</h1>
<section class="content">
	<div class="row">
		<div class="col-md-6">
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">Add Bill</h3>
				</div>
				<%= form_for [:admin, Bill.new] do |f| %>
				<div class="box-body">
					<div class="form-group">
						<%= f.label :input_price %>
						<%= f.number_field :input_price, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :selling_price %>
						<%= f.number_field :selling_price, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :product_id , class: "form-control" %>
						<%= f.select :product_details_id, options_for_select(ProductDetail.all.map{|e| [e.code, e.id]}),{class: "_form-control"} %>
					</div>
					
					<div class="field">
						<%= f.label :quantity %>
						<%= f.number_field :quantity %>

					</div>
					<br>
					<div class="form-group">
						<%= f.submit "Create", class: "btn btn-info" %>
					</div>            
				</div>
				<% end %>
			</div>

		</div>


		<div class="col-md-6">
			<div class="box box-primary">
				<div class="box-header with-border">
					<h3 class="box-title">Responsive Hover Table</h3>

					<div class="box-tools">
						<div class="input-group input-group-sm" style="width: 150px;">
							<input type="text" name="table_search" class="form-control pull-right" placeholder="Search">

							<div class="input-group-btn">
								<button type="submit" class="btn btn-default"><i class="fa fa-search"></i></button>
							</div>
						</div>
					</div>
				</div>
				<!-- /.box-header -->
				<div class="box-body table-responsive no-padding">
					<table class="table table-hover">
						<tbody><tr>
							<th>Type product</th>
							<th>Product</th>
							<th>Code</th>
							<th>Price</th>
							<th>New</th>
							<th>Discount</th>
							<th colspan="3"></th>
						</tr>
						<% @admin_product_details.each do |admin_product_detail| %>
						<tr>
							<td><%= admin_product_detail.type_product %></td>
							<td><%= admin_product_detail.product_id %></td>
							<td><%= admin_product_detail.code %></td>
							<td><%= admin_product_detail.price %></td>
							<td><%= admin_product_detail.new %></td>
							<td><%= admin_product_detail.discount %></td>
							<td><%= link_to 'Show', admin_product_detail_path(admin_product_detail) %></td>
							<td><%= link_to 'Edit', edit_admin_product_detail_path(admin_product_detail) %></td>
							<td><%= link_to 'Destroy', admin_product_detail_path(admin_product_detail), method: :delete, data: { confirm: 'Are you sure?' } %></td>
						</tr>
						<% end %>

					</tbody></table>
				</div>
				<!-- /.box-body -->
			</div>

		</div>
	</section>
	<%= link_to 'Back', admin_bills_path %>
