<%  provide(:title,"Edit Bills") %>

<h1>Bill</h1>
<section class="content">
	<div class="row">
		<div class="col-md-6">
			<div class="box box-primary">
				<div class="box-header with-border">
				</div>
				<%= form_for [:admin, @admin_bill] do |f| %>
				<% if @admin_bill.errors.any? %>
				<div id="error_explanation">
					<h2><%= pluralize(product.errors.count, "error") %> prohibited this product from being saved:</h2>

					<ul>
						<% product.errors.full_messages.each do |message| %>
						<li><%= message %></li>
						<% end %>
					</ul>
				</div>
				<% end %>
				<div class="box-body">
					<div class="form-group">
						<%= f.label :input_price %>
						<%= f.number_field :input_price, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :selling_price %>
						<%= f.number_field :selling_price, class: "form-control" %>
					</div>
					<div class="form-group">
						<%= f.label :product_details_id , class: "form-control" %>
						<%= f.select :product_details_id, options_for_select(ProductDetail.all.map{|e| [e.code, e.id]}) %>
					</div>

			

					<div class="form-group">
						<%= f.label :quantity %>
						<%= f.number_field :quantity, class: "form-control" %>
					</div>


			
					<br>
					<div class="form-group">
						<%= f.submit "Update", class: "btn btn-info" %>
					</div>              
				</div>
				<% end %>
			</div>
		</div>
	</section>