<div class="container">
  <ul class="breadcrumb">
    <li><a href=""><i class="fa fa-home"></i></a></li>
    <li class="last"><a href="" style="display: none;">Search</a><span>Search</span></li>
  </ul>
  <div class="row">
    <div id="content" class="col-sm-9">
      <%= search_form_for @q, url: "#{request.fullpath}" do |f| %> 
        <div>
          <h1 class="tx-breaks">Search</h1>
          <label class="control-label" for="input-search">Search Criteria</label>
          <div class="row">
            <div class="col-sm-4">
              <!-- <input name="search" value="" placeholder="Keywords" class="form-control" type="text"> -->
              <%= f.search_field :name_cont, placeholder: "Product Name", class: "form-control" %>
              <br>
            </div>
            <div class="col-sm-3">
              <select name="category_id" class="form-control">
                <option value="">All Categories</option>
                <option value="">Corporate</option>
                <option value="">Love &amp; Romance</option>
                <option value="">Sympathy</option>
                <option value="">New Baby</option>
                <option value="">Christmas</option>
              </select>
              <br>
            </div>
            <div class="col-sm-12 col-lg-3">
            
            </div>
          </div>
          <p>
          
          </p>
          <!-- <input value="Search" id="button-search" class="btn btn-primary" type="button"> -->
          <%= f.submit "Search", class: "btn btn-primary" %>
          <br><br>
          <h2>Products meeting the search criteria</h2>
          <p>There is no product that matches the search criteria.</p>
        </div>
      <% end %>
      
    </div>

  </div>    
</div>

<div class="container">
  <div class="product-filter clearfix">
    <div class="row">
      <div class="col-sm-12 col-md-2">
        <label class="control-label" for="input-sort">Sort By:</label>
      </div>
      <div class="col-sm-12 col-md-3">
        <select id="input-sort" class="form-control col-sm-3" onchange="location = this.value;">
        <option value="" selected="selected">Default</option>
        <option value="">Name (A - Z)</option>
        <option value="">Name (Z - A)</option>
        <option value="">Price (Low &gt; High)</option>
        <option value="">Price (High &gt; Low)</option>
      </select>
      </div>
    </div>
  </div>
</div>
