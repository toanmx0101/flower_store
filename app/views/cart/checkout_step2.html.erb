<div class="container">
    <ul class="breadcrumb">
        <li><a href="/"><i class="fa fa-home"></i></a></li>
        <li><a href="shoppingcart">Shopping Cart</a></li>
        <li class="last"><a href="/checkout" style="display: none;">Checkout</a><span>Checkout</span></li>

    </ul>
    <div class="panel panel-default">
        <div class="panel-heading">
            <h4 class="panel-title">Step 2: Billing Details</h4>
        </div>
        <div class="panel-collapse collapse in" id="collapse-payment-address" aria-expanded="true" style="">
            <div class="panel-body">
                <%= form_for(:session, url: cart_add_address_path, method: :post, class: 'form-horizontal') do |f| %>
                
                    <div class="radio">
                        <label>
                        <input name="payment_address" value="existing" checked="checked" type="radio">
                        I want to use an existing address</label>
                    </div>
                    <div id="payment-existing">
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-payment-firstname">Your Address</label>
                            <div class="col-sm-10">
                                <%= f.text_field :address, class: "form-control", value: "lotus maximus, 1233 St Frank, St Foliro, Florida, United States"%>                               
                            </div>
                        </div>                            
                    </div>
                    <div class="radio">
                        <label>
                            <input name="payment_address" value="new" type="radio"> I want to use a new address
                        </label>
                    </div>
                    <br>
                    <div id="payment-new" style="display: none;">
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="input-payment-firstname">Your Name</label>
                            <div class="col-sm-10">
                                <%= f.text_field :new_name, class: "form-control",placeholder: 'Your Name'%>         
                            </div>
                        </div>    
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="">Phonnumber</label>
                            <div class="col-sm-10">
                                <%= f.text_field :new_phonenumber, class: "form-control",type: 'number',placeholder: 'Phonenumber'%>         
                            </div>
                        </div>    
                        <div class="form-group required">
                            <label class="col-sm-2 control-label" for="">Address</label>
                            <div class="col-sm-10">
                                <%= f.text_field :new_address, class: "form-control",placeholder: 'Address'%>   
                            </div>
                        </div>    
                    </div>
                    <div class="buttons clearfix">
                        <div class="pull-right">
                           <%= f.submit "Continue", class: "btn btn-primary" %>    
                        </div>
                    </div>
   
                <% end %>
                <script type="text/javascript"><!--
                    $('input[name=\'payment_address\']').on('change', function() {
                        if (this.value == 'new') {
                            $('#payment-existing').hide();
                            $('#payment-new').show();
                        } else {
                            $('#payment-existing').show();
                            $('#payment-new').hide();
                        }
                    });
               </script>
            </div>
        </div>
    </div>
</div>            