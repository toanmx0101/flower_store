<!DOCTYPE html>
<html>
<head>
  <%= csrf_meta_tags %>
  <%= stylesheet_link_tag    'application', media: 'all',
  'data-turbolinks-track': 'reload' %>
  <%= render 'layouts/shim' %>    
  <title>Flower Store</title>
  <link rel="icon" href="assets/hydrangea.png">

  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.1.1/jquery.min.js"></script>
  <%= javascript_include_tag 'application',media: 'all', 'data-turbolinks-track': 'reload' %>
  <link rel="stylesheet" type="text/css" href="assets/fl-budicons-launch.css">
  <link rel="stylesheet" type="text/css" href="assets/fl-line-icon-set.css">
</head>
<body>


  <div id="page">
    <%= render 'layouts/header' %>

    <div class="container" id="ctn">
      <% flash.each do |message_type, message| %>
        <%= content_tag(:div, message, class: "alert alert-#{message_type}") %>
        <% end %>
          <%= yield %>
    </div>  




    
    <%= render 'layouts/footer' %>
  </div> 
</body>
</html>